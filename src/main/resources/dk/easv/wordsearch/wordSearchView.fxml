<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="362.0" prefWidth="470.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="dk.easv.wordsearch.gui.WordSearchController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <TextField fx:id="txtSearchWord" />
         <Button mnemonicParsing="false" onAction="#onClickSearch" text="Search" />
      </children>
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label text="Words" />
               <ListView fx:id="lstWords" prefHeight="200.0" prefWidth="200.0" />
            </children>
         </VBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                           <VBox prefHeight="200.0" prefWidth="100.0">
                              <children>
                                 <Label text="Words beginning with 'A'" />
                                 <ListView fx:id="lstA" prefHeight="200.0" prefWidth="200.0" />
                              </children>
                           </VBox>
                           <VBox prefHeight="200.0" prefWidth="100.0">
                              <children>
                                 <Label text="Words beginning with 'N'" />
                                 <ListView fx:id="lstN" prefHeight="200.0" prefWidth="200.0" />
                              </children>
                           </VBox>
                        </children>
                     </HBox>
                     <ListView fx:id="lstHistory" prefHeight="200.0" prefWidth="200.0" />
                     <Button mnemonicParsing="false" onAction="#onClickClearHistory" text="Button" />
                  </children>
               </VBox>
            </children>
         </HBox>
      </children>
   </HBox>
</VBox>
